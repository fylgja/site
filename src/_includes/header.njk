<a href="#page-main" class="skip-link">Go to main content</a>
<header class="page-header sticky top-0">
    <div class="flex justify-between items-center py-2 md-py-4 container">
        <a href="/" class="logo flex-shrink-0">
            <svg width="76" height="38" fill="currentColor">
                <title>Fylgja</title>
                <use href="/images/sprite.svg#logo" />
            </svg>
        </a>
        {% if navigation.main %}
            <div class="flex iteme-center">
                <nav id="main-menu"
                    aria-label="Main menu"
                    class="menu -row hidden sm-inline-flex iteme-center space-x-2">
                    {% for item in navigation.main %}
                        <a href="{{ item.url }}"
                            {% if page.url==item.url %}class="is-active"{% endif %}
                            {% if item.icon %}style="--menu-item-padding: 0.4375rem;"{% endif %}
                            {% if page.url==item.url %}aria-current="page"{% endif %}
                            {% if item.external %} rel="noopener noreferrer" target="_blank" {% endif %}
                            {% if item.icon %}title="{{ item.text }}"{% endif %}>
                            {% if item.icon %}
                                {{ item.icon | svgContents("block") | safe }}
                            {% else %}
                                <span>{{ item.text }}</span>
                            {% endif %}
                        </a>
                    {% endfor %}
                </nav>
                <button id="show-offcanvas-menu" type="button" class="btn -icon md-hidden ms-4">
                    <svg width="24" height="24" fill="currentColor">
                        <title>Open menu</title>
                        <use href="/images/sprite.svg#menu" />
                    </svg>
                </button>
            </div>
        {% endif %}
    </div>
</header>
{% include "offcanvas.njk" %}
