css: { page: "/css/page.css" }
---

<!DOCTYPE html>
<html lang="en">
    {% include "head.njk" %}
    <body class="flex flex-col min-h-screen">
        {% include "header.njk" %}
        <main id="page-main" class="flex-grow">
            <header class="section aria-only">
                <div class="container">
                    {% if title %}
                        <h1>{{ title }}</h1>
                    {% endif %}
                    {% if description %}
                        <p>{{ description }}</p>
                    {% endif %}
                </div>
            </header>
            {{ content | safe }}
        </main>
        {% include "footer.njk" %}
    </body>
</html>

