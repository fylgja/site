---
export type SpeculationType = {
	source?: string;
	where: Object;
	eagerness?: "immediate" | "eager" | "moderate" | "conservative";
};

interface Props {
	rules?: {
		prerender?: SpeculationType[];
		prefetch?: SpeculationType[];
	};
}

const { rules } = Astro.props;
const defaultRules = {
	prerender: [
		{
			source: "document",
			where: {
				and: [
					{ href_matches: "/*" },
					{ not: { selector_matches: ".do-not-prerender" } },
					{ not: { selector_matches: "[download]" } },
					{ not: { selector_matches: "[rel~=nofollow]" } },
				],
			},
			eagerness: "moderate",
		},
	],
};

const speculationrules = rules || defaultRules;
---

{
	speculationrules && (
		<script type="speculationrules" is:inline set:html={JSON.stringify(speculationrules)} />
	)
}
