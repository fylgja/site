---
import MediaCard from "@components/ui/MediaCard.astro";

type FylgjaMq = {
	sm?: number;
	md?: number;
	lg?: number;
	xl?: number;
	xxl?: number;
};

interface Props {
	items: {
		title: string;
		description?: string;
		icon?: string;
	}[];
	iconSize?: number;
	iconPosition?: "default" | "top";
	cols?: FylgjaMq;
	class?: string;
	classItem?: string;
}

const {
	items,
	iconSize = 50,
	iconPosition,
	cols = { md: 2 },
	class: classes,
	classItem,
} = Astro.props;
const gridCols = {
	"--sm_grid": cols.sm,
	"--md_grid": cols.md,
	"--lg_grid": cols.lg,
	"--xl_grid": cols.xl,
	"--xxl_grid": cols.xxl,
};
---

<ul role="list" class:list={["grid", classes]} style={gridCols}>
	{
		items.map((item) => (
			<MediaCard
				title={item.title}
				description={item.description}
				icon={item.icon}
				iconSize={iconSize}
				class={classItem}
				iconPosition={iconPosition}
			/>
		))
	}
</ul>
