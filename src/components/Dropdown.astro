---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="relative">
	<slot name="button">
		<button aria-expanded="false">
			{title}
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="3"
				stroke="currentColor"
				class="w-3 h-3 mt-0.5 group-open:rotate-180"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
			</svg>
		</button>
	</slot>
	<div class="absolute">
		<slot />
	</div>
</div>
