const isActive = (item: string) => {
	return Astro.url.pathname.startsWith(item) ? "is-active" : "";
};
---

<nav class="menu">
	<a class:list={["btn w-full", isActive("/library")]} href="/library">Library</a>
	<a class:list={["btn w-full", isActive("/docs")]} href="/docs">Docs</a>
	<a class:list={["btn w-full", isActive("/ui")]} href="/ui">UI Components</a>
</nav>

<style>
	.menu {
		--gap: 4px;
		--stroke: color-mix(in srgb, var(--root-fg), transparent 80%);
		--btn-radius: 0.375rem;
		--btn-border-width: 1px;
		--btn-hover-stroke: var(--stroke);
		--btn-active-stroke: var(--stroke);
		--btn-active-bg: var(--brand-fade);
		margin-block-end: 1em;
		padding: var(--gap);
		border-radius: calc(var(--btn-radius) + var(--gap));
		border: 1px solid var(--stroke);
		background-color: var(--root-bg);
		color: var(--root-fg);

		> * + * {
			margin-block-start: var(--gap);
		}
	}
</style>
