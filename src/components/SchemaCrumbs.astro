---
import { trailingSlash } from "astro:config/client";
import { capitalized, parseUrl } from "@/utils";

const currentUrl = Astro.url.pathname;
const paths = currentUrl.split("/").filter((crumb: any) => crumb);
const itemListElement: {}[] = [];

// TODO get real title for each path
if (paths.length) {
	itemListElement.push({
		"@type": "ListItem",
		position: 0,
		item: {
			"@id": parseUrl(Astro.url.origin, trailingSlash),
			name: "Home",
		},
	});

	paths.forEach((path, index) => {
		const url = `${new URL(paths.slice(0, index + 1).join("/"), Astro.url.origin)}`;
		itemListElement.push({
			"@type": "ListItem",
			position: index + 1,
			item: {
				"@id": parseUrl(url, trailingSlash),
				name: capitalized(path.replace(/-/g, " ")),
			},
		});
	});
}

const schema =
	paths.length > 0
		? {
				"@context": "https://schema.org",
				"@type": "BreadcrumbList",
				itemListElement,
			}
		: {};
---

{schema && <script type="application/ld+json" is:inline set:html={JSON.stringify(schema)} />}
