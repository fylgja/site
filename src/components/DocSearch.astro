---
import "@docsearch/css/dist/modal.css";

const { ...attrs } = Astro.props;
---

<div id="docsearch" {...attrs}>
	<button
		type="button"
		class="DocSearch DocSearch-Button"
		aria-label="Search"
	>
		<span class="DocSearch-Button-Container">
			<svg
				width="20"
				height="20"
				class="DocSearch-Search-Icon"
				viewBox="0 0 20 20"
			>
				<path
					d="M14.386 14.386l4.0877 4.0877-4.0877-4.0877c-2.9418 2.9419-7.7115 2.9419-10.6533 0-2.9419-2.9418-2.9419-7.7115 0-10.6533 2.9418-2.9419 7.7115-2.9419 10.6533 0 2.9419 2.9418 2.9419 7.7115 0 10.6533z"
					stroke="currentColor"
					fill="none"
					fill-rule="evenodd"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
			</svg>
			<span class="DocSearch-Button-Placeholder">Search</span>
		</span>
		<span class="DocSearch-Button-Keys"></span>
	</button>
</div>

<style is:global>
	.DocSearch {
		--docsearch-primary-color: var(--brand);
		--docsearch-text-color: var(--root-fg);
		--docsearch-spacing: 1rem;
		--docsearch-icon-stroke-width: 1.4;
		--docsearch-highlight-color: var(--brand);
		--docsearch-muted-color: color-mix(
			in srgb,
			var(--root-fg),
			transparent 33%
		);
		--docsearch-container-background: hsla(0, 0%, 0%, 0.3);

		--docsearch-modal-width: 560px;
		--docsearch-modal-height: 600px;
		--docsearch-modal-background: color-mix(
			in oklab,
			var(--root-bg) 90%,
			#fff
		);
		--docsearch-modal-shadow: var(--shadow-2);

		--docsearch-searchbox-height: 56px;
		--docsearch-searchbox-background: color-mix(
			in oklab,
			var(--root-bg) 90%,
			var(--brand)
		);
		--docsearch-searchbox-focus-background: var(--form-bg, var(--root-bg));
		--docsearch-searchbox-shadow: inset 0 0 0 1px currentcolor;

		--docsearch-hit-height: 56px;
		--docsearch-hit-color: var(--roof-fg);
		--docsearch-hit-active-color: var(--on-brand);
		--docsearch-hit-background: var(--root-bg);

		--docsearch-key-gradient: linear-gradient(
			var(--sl-color-bg-inline-code) 0%,
			var(--sl-color-bg-inline-code) 100%
		);
		--docsearch-footer-height: 44px;
		--docsearch-footer-background: color-mix(
			in oklab,
			var(--root-bg) 90%,
			var(--brand)
		);
		--docsearch-footer-shadow: 0 -1px 0 0 var(--brand);
		--docsearch-logo-color: var(--docsearch-muted-color);
	}

	.DocSearch-Form:focus-within {
		--docsearch-searchbox-shadow: inset 0 0 0 1px
			var(--form-active-color, currentcolor);
		outline: 1px solid var(--form-active-color, currentcolor);
		outline-offset: calc((var(--form-border-width, 1px) + 1px) * -1);
	}

	.DocSearch-Search-Icon {
		stroke-width: 0.125rem;
	}

	.DocSearch-Button-Container {
		display: contents;
	}

	.DocSearch-Button-Keys {
		margin-inline-start: auto;
		padding: 0 0.25rem;
		font-size: 0.875rem;
		background-color: color-mix(in srgb, var(--root-fg), transparent 90%);
		border-radius: inherit;

		& kbd {
			padding: 0 0.125rem;
		}
	}

	.DocSearch-Logo svg :is(.cls-1, .cls-2) {
		fill: currentcolor;
	}

	@media (width >= 768px) {
		.DocSearch-Button {
			--btn-stroke: color-mix(in srgb, var(--root-fg), transparent 80%);
			border-width: 1px;
			width: min(100%, 22rem);
		}

		.DocSearch-Search-Icon {
			width: 0.875rem;
			height: 0.875rem;
		}
	}

	@media (width < 768px) {
		.DocSearch-Button {
			padding: 0.8em;
		}

		.DocSearch-Button-Placeholder,
		.DocSearch-Button-Keys {
			display: none;
		}
	}
</style>

<script>
	// Make sure to set `astro check` with `--minimumSeverity warning`
	window.addEventListener("DOMContentLoaded", async () => {
		// @ts-ignore
		const { default: docsearch } = await import("@docsearch/js");
		docsearch({
			container: "#docsearch",
			appId: "7AAGJSCIGN",
			indexName: "fylgja",
			apiKey: "4d0f19c221ed80ac0a870222e65cb279",
		});
	});
</script>
