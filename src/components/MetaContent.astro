---
import { parseDate } from "@/utils";

interface Props {
	published: Date;
	updatedOn?: Date;
	class?: string;
	style?: { [key: string]: string };
}

const { published, updatedOn, class: classes, style } = Astro.props;
---

<p class:list={["meta", classes]} style={style}>
	{published && <time datetime={String(published)}>{parseDate(published)}</time>}
	{updatedOn && <time datetime={String(updatedOn)}>{parseDate(updatedOn)}</time>}
</p>

<style>
	.meta {
		display: inline-flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 0.5rem 1rem;
		font-size: 0.875em;
		color: var(--text-color-muted);
	}

	.meta a {
		display: flex;
		align-items: center;
		gap: 0.375rem;
		text-decoration: none;
		color: color-mix(in srgb, var(--brand) 65%, var(--root-fg));

		& svg {
			color: var(--text-color-muted);
		}

		&:hover {
			color: var(--text-color);
		}
	}
</style>
