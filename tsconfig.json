{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/utils": ["src/utilities.ts"],
			"@/assets/*": ["src/assets/*"],
			"@/components/*": ["src/components/*"],
			"@/layouts/*": ["src/layouts/*"]
		}
	}
}
